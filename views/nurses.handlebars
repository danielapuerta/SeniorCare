<table class="table">
  <thead>
    <tr>
      <th scope="col" data-class="hidden" class="hidden">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Nurse Code</th>
      <th scope="col">Role</th>
      <th scope="col">Admin</th>
      <th scope="col">Delete</th>

    </tr>
  </thead>
  <tbody>
    {{#each nurseObjs}}
      <tr data={{dataValues}} class="table-row">
        <td class="hidden">{{dataValues.id}}</td>
        <td>{{dataValues.firstName}}</td>
        <td>{{dataValues.lastName}}</td>
        <td>{{dataValues.nurseCode}}</td>
        <td>{{dataValues.role}}</td>
        <td>
          {{#if dataValues.isAdmin}}
          <input id="isAdmin_buttonOn" type="checkbox" checked data-toggle="toggle" data-onstyle="primary" data-offstyle="secondary" data-size="small"/>
         {{/if}}
        {{#if dataValues.isNotAdmin}}
          <input id="notAdmin_buttonOff" type="checkbox" data-toggle="toggle" data-onstyle="primary" data-offstyle="secondary" data-size="small"/>
         {{/if}}
        </td>
        <td><span class="bi bi-trash fa-lg"></span></td>
      </tr>
    {{/each}}
  </tbody>
</table>


<script>
   $('#isAdmin_buttonOn').bootstrapToggle('on')
   $('#notAdmin_buttonOff').bootstrapToggle('off')
</script>